<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="ir_cron_contract_expiry_reminders" model="ir.cron">
      <field name="name">Contract Expiry Reminders</field>
      <field name="model_id" ref="model_customer_contract"/>
      <field name="state">code</field>
      <field name="code">model.cron_send_expiry_reminders()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">True</field>
    </record>
    <record id="ir_cron_loa_auto_expire" model="ir.cron">
      <field name="name">LOA Auto Expiry</field>
      <field name="model_id" ref="model_customer_loa"/>
      <field name="state">code</field>
      <field name="code">model.cron_update_loa_status()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">True</field>
    </record>
  </data>
</odoo>
