<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_customer_contract_tree" model="ir.ui.view">
    <field name="name">customer.contract.list</field>
    <field name="model">customer.contract</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="supplier_id"/>
        <field name="contract_type"/>
        <field name="start_date"/>
        <field name="end_date"/>
      </list>
    </field>
  </record>

  <record id="view_customer_contract_form" model="ir.ui.view">
    <field name="name">customer.contract.form</field>
    <field name="model">customer.contract</field>
    <field name="arch" type="xml">
      <form string="Customer Contract">
        <header>
          <button name="action_send_for_signature" type="object" string="Send for Signature" class="oe_highlight"/>
          <button name="action_mark_signed" type="object" string="Mark Signed"/>
          <button name="action_refresh_signature_status" type="object" string="Refresh Signature Status"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="partner_id"/>
              <field name="loa_id"/>
              <field name="price_request_id"/>
              <field name="price_response_id"/>
            </group>
            <group>
              <field name="supplier_id"/>
              <field name="contract_type"/>
              <field name="start_date"/>
              <field name="end_date"/>
              <field name="pdf_attachment_id"/>
            </group>
          </group>
          <group string="Pricing">
            <field name="unit_rate_p_per_kwh"/>
            <field name="standing_charge_gbp_per_day"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_customer_contract" model="ir.actions.act_window">
    <field name="name">Contracts</field>
    <field name="res_model">customer.contract</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
