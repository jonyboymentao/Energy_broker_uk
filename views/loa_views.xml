<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_customer_loa_tree" model="ir.ui.view">
    <field name="name">customer.loa.list</field>
    <field name="model">customer.loa</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="issue_date"/>
        <field name="expiry_date"/>
        <field name="status"/>
        <field name="price_request_count"/>
      </list>
    </field>
  </record>

  <record id="view_customer_loa_form" model="ir.ui.view">
    <field name="name">customer.loa.form</field>
    <field name="model">customer.loa</field>
    <field name="arch" type="xml">
      <form string="Letter of Authority">
        <sheet>
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="partner_id"/>
              <field name="issue_date"/>
              <field name="expiry_date" readonly="1"/>
              <field name="status"/>
            </group>
            <group>
              <field name="pdf_attachment_id"/>
              <field name="sign_request_id" readonly="1"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_customer_loa" model="ir.actions.act_window">
    <field name="name">Letters of Authority</field>
    <field name="res_model">customer.loa</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
