<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_crm_lead_form_energy_broker" model="ir.ui.view">
    <field name="name">crm.lead.form.energy.broker</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="action_open_lead_loas" type="object" class="oe_stat_button" icon="fa-file">
          <div class="o_stat_info">
            <field name="loa_count"/>
            <span class="o_stat_text"> LOAs</span>
          </div>
        </button>
        <button name="action_open_lead_requests" type="object" class="oe_stat_button" icon="fa-list">
          <div class="o_stat_info">
            <field name="request_count"/>
            <span class="o_stat_text"> Requests</span>
          </div>
        </button>
        <button name="action_open_lead_responses" type="object" class="oe_stat_button" icon="fa-exchange">
          <div class="o_stat_info">
            <field name="response_count"/>
            <span class="o_stat_text"> Responses</span>
          </div>
        </button>
        <button name="action_open_lead_contracts" type="object" class="oe_stat_button" icon="fa-file-text">
          <div class="o_stat_info">
            <field name="contract_count"/>
            <span class="o_stat_text"> Contracts</span>
          </div>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
