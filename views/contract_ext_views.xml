<odoo>
  <data>
    <record id="view_customer_contract_form_ext" model="ir.ui.view">
      <field name="name">customer.contract.form.ext</field>
      <field name="model">customer.contract</field>
      <field name="inherit_id" ref="energy_broker_uk.view_customer_contract_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_send_for_signature" type="object" string="Send for Signature" class="oe_highlight"/>
        </xpath>
        <xpath expr="//sheet" position="inside">
          <group string="Commission">
            <field name="supplier_commission" readonly="1"/>
            <field name="commission_first_payment"/>
            <field name="full_commission" readonly="1"/>
            <field name="commission_amount_total" readonly="1"/>
            <field name="commission_to_pay" readonly="1"/>
          </group>
          <group string="Alerts">
            <field name="alert"/>
            <field name="alert_no"/>
            <field name="alert_color"/>
          </group>
          <group string="Signature">
            <field name="sign_request_id"/>
            <field name="sign_status"/>
            <field name="signer_partner_id"/>
            <field name="sign_completed_on"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
