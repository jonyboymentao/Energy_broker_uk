<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_customer_site_list" model="ir.ui.view">
    <field name="name">customer.site.list</field>
    <field name="model">customer.site</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="meter_type"/>
        <field name="mpan_mprn"/>
        <field name="annual_usage_kwh"/>
        <field name="contract_end_date"/>
      </list>
    </field>
  </record>

  <record id="view_customer_site_form" model="ir.ui.view">
    <field name="name">customer.site.form</field>
    <field name="model">customer.site</field>
    <field name="arch" type="xml">
      <form string="Customer Site">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="partner_id"/>
              <field name="lead_id"/>
              <field name="meter_type"/>
              <field name="mpan_mprn"/>
            </group>
            <group>
              <field name="current_supplier_id"/>
              <field name="annual_usage_kwh"/>
              <field name="kva"/>
              <field name="contract_end_date"/>
            </group>
          </group>
          <group string="Address">
            <field name="street"/>
            <field name="street2"/>
            <field name="city"/>
            <field name="state_id"/>
            <field name="zip"/>
            <field name="country_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_customer_site" model="ir.actions.act_window">
    <field name="name">Sites</field>
    <field name="res_model">customer.site</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
